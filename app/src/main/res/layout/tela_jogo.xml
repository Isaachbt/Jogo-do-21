<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/txtPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maquina"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtValorQSaiuMaquinaSolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_conta_total"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contaegm"
            android:textSize="24dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txtContagemMaquinaSolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/msgAvisoSolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vc perdeu feio em!"
            android:textSize="26dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtContagemEuSolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="35dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/txtValorQSaouEuSolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eu"
        android:textSize="24dp"
        android:textStyle="bold" />





</androidx.appcompat.widget.LinearLayoutCompat>